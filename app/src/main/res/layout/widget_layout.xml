<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_10"
    android:background="@drawable/round_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/widget_check_internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/internet_card"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_5"
                android:text="@string/paquete_internet"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/widget_text_color"
                android:textSize="@dimen/text_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_check_bonos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cuba"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_5"
                android:layout_weight="1.8"
                android:text="@string/paquete_nacional"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/widget_text_color"
                android:textSize="@dimen/text_12" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/widget_buy_pqt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_package_widget"/>

            <TextView
                android:id="@+id/text_view_pqt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_5"
                android:layout_weight="1.8"
                android:text="@string/action_paquete"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textColor="@color/widget_text_color"
                android:textSize="@dimen/text_12" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/widget_check_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/money_pay_drawer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_5"
                android:text="@string/consultar_saldo"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textColor="@color/widget_text_color"
                android:textSize="@dimen/text_12" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:layout_marginRight="@dimen/padding_16"
            android:layout_marginLeft="@dimen/padding_16"
            android:orientation="horizontal"
            android:divider="@drawable/vertical_divider"
            android:showDividers="middle"
            android:weightSum="2">

            <TextView
                android:id="@+id/text_view_paquete_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_paquete"
                android:textColor="@color/widget_text_color"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_view_bono_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_5"
                android:text="@string/action_paquete"
                android:textColor="@color/widget_text_color"
                android:layout_weight="1" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_5"
            android:layout_marginRight="@dimen/padding_16"
            android:layout_marginLeft="@dimen/padding_16">

            <TextView
                android:id="@+id/text_view_days_left_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_paquete"
                android:textColor="@color/widget_text_color"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>

